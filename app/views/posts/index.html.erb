<div class="row">
  <div class="col-md-8 col-md-offset-2">

    <h1>All Posts</h1>
      <hr>
      <% if @posts.any? %>
        <% @posts.each do |post| %>
          <h4>

            <%= post.city.name %> - <%= post.title %>
                
            <span class="pull-right">
              <%= link_to "View Post", post_path(post), class: "btn btn-primary pull-right" %>
            </span>
          </h4>
        
          <hr>
        <% end %>
      <% else %>
          <h3>No posts yet!</h3>
          <hr>
      <% end %>
  </div>
</div>